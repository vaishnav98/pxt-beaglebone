{
    "id": "beaglebone",
    "platformid": "pxtbeagle",
    "nickname": "beaglebone",
    "name": "MakeCode Beaglebone",
    "title": "MakeCode Beaglebone - Blocks / Javascript editor",
    "description": "A Blocks / JavaScript code editor for Beaglebone Boards",
    "corepkg": "core",
    "bundleddirs": [
        "libs/core",
        "libs/base",
        "libs/pocketbeagle",
        "libs/beagleboneblack",
        "libs/beaglegreen",
        "libs/techlab"
    ],
    "serial": {
        "useEditor": true,
        "log": true,
        "editorTheme": {
            "graphBackground": "#d9d9d9",
            "lineColors": [
                "#CC2936",
                "#FFC914",
                "#2EB7ED",
                "#FB48C7",
                "#08415C",
                "#C200C0"
            ]
        }
    },
    "simulator": {
        "autoRun": true,
        "streams": false,
        "aspectRatio": 1.0,
        "parts": true,
        "instructions": false,
        "partsAspectRatio": 0.69,
        "dynamicBoardDefinition": true
    },
    "cloud": {
        "workspace": false,
        "packages": true,
        "sharing": true,
        "publishing": true,
        "importing": true,
        "preferredPackages": [],
        "githubPackages": true
    },
    "runtime": {
        "mathBlocks": true,
        "loopsBlocks": true,
        "logicBlocks": true,
        "variablesBlocks": true,
        "textBlocks": true,
        "listsBlocks": true,
        "functionBlocks": true,
        "onStartNamespace": "loops",
        "onStartColor": "#40bf4a",
        "onStartWeight": 100,
        "pauseUntilBlock": {
            "category": "loops"
        }
    },
    "compile": {
        "isNative": false
    },
    "appTheme": {
        "accentColor": "#ecf0f1",
        "backgroundColor": "#ffffff",
        "logoUrl": "https://github.com/vaishnav98/pxt-beaglebone",
        "logo": "./static/logo.svg",
        "docsLogo": "./static/logo.svg",
        "portraitLogo": "./static/logo.svg",
        "footerLogo": "./static/logo.svg",
        "organization": "Microsoft MakeCode",
        "organizationUrl": "https://makecode.com/",
        "organizationLogo": "./static/Microsoft-logo_rgb_c-gray-square.png",
        "organizationWideLogo": "./static/Microsoft-logo_rgb_c-gray.png",
        "homeUrl": "https://vaishnav98.github.io/pxt-beaglebone/index.html",
        "embedUrl": "https://vaishnav98.github.io/pxt-beaglebone/index.html",
        "privacyUrl": "https://go.microsoft.com/fwlink/?LinkId=521839",
        "termsOfUseUrl": "https://go.microsoft.com/fwlink/?LinkID=206977",
        "githubUrl": "https://github.com/vaishnav98/pxt-beaglebone",
        "feedbackUrl": "https://github.com/vaishnav98/pxt-beaglebone/issues",
        "betaUrl": "https://github.com/vaishnav98/pxt-beaglebone",
        "boardName": "board",
        "homeScreenHero": "./static/hero.png",
        "debugger": true,
        "print": true,
        "chooseBoardOnNewProject": true,
        "lightToc": true,
        "instructions": true,
        "docMenu": [
            {
                "name": "About",
                "path": "/about"
            },
            {
                "name": "Boards",
                "path": "/boards"
            },
            {
                "name": "Blocks",
                "path": "/blocks"
            },
            {
                "name": "JavaScript",
                "path": "/javascript"
            },
            {
                "name": "Reference",
                "path": "/reference"
            },
            {
                "name": "GitHub",
                "path": "https://github.com/vaishnav98/pxt-beaglebone"
            }
        ],
        "invertedMenu": false,
        "invertedToolbox": false,
        "invertedMonaco": false,
        "monacoToolbox": true,
        "highContrast": true,
        "greenScreen": true,
        "simAnimationEnter": "fly right in",
        "simAnimationExit": "fly right out",
        "hasAudio": true,
        "disableBlockIcons": true,
        "blocklyOptions": {
            "grid": {
                "spacing": 20,
                "length": 2,
                "colour": "rgba(189, 195, 199, 0.20)",
                "snap": true
            }
        },
        "blockColors": {
            "loops": "#40bf4a",
            "logic": "#4cbfe6",
            "math": "#9966ff",
            "variables": "#FF6680",
            "text": "#ffab19",
            "advanced": "#00272B",
            "functions": "#005a9e",
            "arrays": "#8A1C7C"
        },
        "allowPackageExtensions": true,
        "extendEditor": true,
        "crowdinProject": "kindscript",
        "scriptManager": true
    },
    "ignoreDocsErrors": true
}
